# rc
# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=


[[ -n `which go` ]] && export GOPATH=`go env GOPATH` && export PATH=$GOPATH/bin:$PATH && export GO111MODULE=on


if command -v htop > /dev/null 2>&1; then 
	alias top=htop
fi

if command -v prettyping > /dev/null 2>&1; then 
	alias ping=prettyping
fi

if command -v http > /dev/null 2>&1; then 
	alias curl=http
	alias wget=http
fi
if command -v fasd> /dev/null 2>&1; then 
	eval "$(fasd --init auto)"
fi

alias cvi="vim ~/.vim/vimrc"
alias vi="vim --noplugin"
alias ls="ls -G"

alias cls="clear"
alias grep="grep --color=auto"
alias mv='mv -v'
alias mkdir='mkdir -v'
alias cp='cp -v'
alias rm='rm -v'
alias ln='ln -v'
alias ..='cd ../'                           # Go back 1 directory level
alias ll='ls -Grlth'
alias ...='cd ../../'                       # Go back 2 directory levels
alias myip='curl ip.appspot.com'
alias sshproxy='ssh -N -f -D '



[[ ! -h ~/.vim ]] && ln -s ~/.dotfiles/vim ~/.vim  && echo "touch .vim"

export HSTR_CONFIG=hicolor       # get more colors
export XDG_CONFIG_HOME="${HOME}/.config"
 
export PATH="$(python3 -c 'import site; print(site.USER_BASE)')/bin:${PATH}"
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
